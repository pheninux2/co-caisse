{
  "name": "co-caisse",
  "version": "1.0.0",
  "description": "Application de gestion de caisse générique et configurable",
  "main": "main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"npm run react-start\"",
    "server": "node src/server/index.js",
    "seed": "node src/server/database/seed.js",
    "build": "npm run build-ui && npm run electron-build",
    "build-ui": "webpack --mode production",
    "electron-build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build-ui && electron-builder",
    "dist:win": "npm run build-ui && electron-builder --win",
    "dist:portable": "npm run build-ui && electron-builder --win portable",
    "react-start": "webpack serve --mode development",
    "test": "jest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "idb": "^8.0.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "css-loader": "^7.1.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.cocaisse.app",
    "productName": "Co-Caisse",
    "copyright": "Copyright © 2026 Co-Caisse",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "src/server/**/*",
      "src/data/**/*"
    ],
    "extraResources": [
      {
        "from": "src/data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Co-Caisse"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
