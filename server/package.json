{
  "name": "co-caisse-server",
  "version": "2.0.0",
  "description": "Co-Caisse â€” API REST Express + MariaDB",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "seed": "node src/database/seed.js",
    "schema": "mysql -u $DB_USER -p$DB_PASS $DB_NAME < src/database/schema.sql",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.17.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.50.0",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18"
  },
  "vitest": {
    "environment": "node",
    "include": [
      "src/tests/**/*.test.js"
    ],
    "globals": false,
    "clearMocks": true,
    "restoreMocks": true,
    "coverage": {
      "provider": "v8",
      "include": [
        "src/services/fiscal.service.js",
        "src/routes/fiscal.js",
        "src/routes/transactions.js"
      ],
      "reporter": [
        "text",
        "html",
        "lcov"
      ]
    }
  }
}
