{
  "name": "co-caisse-admin",
  "version": "1.0.0",
  "description": "Outil interne de gestion des licences Co-Caisse",
  "main": "src/main.js",
  "private": true,
  "scripts": {
    "dev":         "concurrently \"npm run server\" \"npm run renderer\" \"npm run electron\"",
    "server":      "node --watch server/src/index.js",
    "renderer":    "webpack serve --mode development --config webpack.config.js",
    "electron":    "wait-on http://localhost:4000 && wait-on http://localhost:5001/health && electron .",
    "build":       "webpack --mode production --config webpack.config.js",
    "start":       "electron .",
    "server:prod": "node server/src/index.js",
    "seed":        "node server/src/database/seed.js"
  },
  "dependencies": {
    "bcryptjs":   "^2.4.3",
    "dotenv":     "^16.0.0",
    "mysql2":     "^3.0.0",
    "nodemailer": "^6.9.0",
    "uuid":       "^9.0.0"
  },
  "devDependencies": {
    "@babel/core":             "^7.0.0",
    "@babel/preset-env":       "^7.0.0",
    "babel-loader":            "^9.0.0",
    "concurrently":            "^8.0.0",
    "css-loader":              "^6.0.0",
    "electron":                "^27.0.0",
    "html-webpack-plugin":     "^5.0.0",
    "mini-css-extract-plugin": "^2.0.0",
    "style-loader":            "^3.0.0",
    "wait-on":                 "^7.0.0",
    "webpack":                 "^5.0.0",
    "webpack-cli":             "^5.0.0",
    "webpack-dev-server":      "^4.0.0"
  }
}

