{
  "name": "co-caisse-client",
  "version": "2.0.0",
  "description": "Co-Caisse — Interface Electron + renderer Vanilla JS",
  "main": "src/main.js",
  "homepage": "./",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run renderer\" \"npm run electron\"",
    "renderer": "webpack serve --mode development --config webpack.config.js",
    "electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build-renderer && npm run electron-build",
    "build-renderer": "webpack --mode production --config webpack.config.js",
    "electron-build": "electron-builder",
    "dist:win": "npm run build-renderer && electron-builder --win",
    "dist:portable": "npm run build-renderer && electron-builder --win portable"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-private-methods": "^7.28.6",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "css-loader": "^7.1.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.cocaisse.app",
    "productName": "Co-Caisse",
    "copyright": "Copyright © 2026 Co-Caisse",
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Co-Caisse"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
